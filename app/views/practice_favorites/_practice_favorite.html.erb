<% if practice_diary.user_id != current_user.id %>
  <% if practice_diary.favorited_by?(current_user) %> 
    <p><span>いいね！解除: </span><%=link_to practice_diary.practice_favorites.count, practice_diary_practice_favorites_path(practice_diary.id), method: :delete, remote: true %></p>
  <% else %>
    <p><span>いいね！登録: </span><%=link_to practice_diary.practice_favorites.count, practice_diary_practice_favorites_path(practice_diary.id), method: :post, remote: true %></p>
  <% end %>
<% else %>
  <p><span>いいね！された数: </span><%= practice_diary.practice_favorites.count %></p>
<% end %>