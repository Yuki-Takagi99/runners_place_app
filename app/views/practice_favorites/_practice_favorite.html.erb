<% if practice_diary.user_id != current_user.id %>
  <% if practice_diary.favorited_by?(current_user) %>
    <%=link_to practice_diary_practice_favorites_path(practice_diary.id), method: :delete, remote: true do %>
      <span class="fas fa-heart fav-btn-on" aria-hidden="true"></span>
    <% end %>
    <span class="badge"><%= practice_diary.practice_favorites.count %></span><span class="fas fa-comments comment-icon" aria-hidden="true"></span><span class="badge"><%= practice_diary.practice_comments.count %></span>
  <% else %>
    <%=link_to practice_diary_practice_favorites_path(practice_diary.id), method: :post, remote: true do %>
      <span class="fas fa-heart fav-btn" aria-hidden="true"></span>
    <% end %>
    <span class="badge"><%= practice_diary.practice_favorites.count %></span><span class="fas fa-comments comment-icon" aria-hidden="true"></span><span class="badge"><%= practice_diary.practice_comments.count %></span>
  <% end %>
<% else %>
  <span class="fas fa-heart fav-btn-on" aria-hidden="true"></span><span class="badge"><%= practice_diary.practice_favorites.count %></span><span class="fas fa-comments comment-icon" aria-hidden="true"></span><span class="badge"><%= practice_diary.practice_comments.count %></span>
<% end %>