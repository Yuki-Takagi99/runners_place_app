<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h1 class="text-center">通知</h1>
      <%= link_to "通知を削除", notification_path(@notifications), method: :delete , class: "fas fa-trash" %>
      <% if @notifications.exists? %>
        <div class="notification-index">
          <%= render @notifications %>
        </div>
      <% else %>
        <h3 class="text-center">通知はありません</h3>
      <% end %>
    </div>
  </div>
</div>